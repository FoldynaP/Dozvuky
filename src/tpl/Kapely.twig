{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Dozvuky léta - Kapely' %}
{% set description = 'V sekci kapely webových stránek dozvuků léta naleznete informace o kapelách, účinkujících na následujícím ročníku festivalu. V České Třebové pod Peklákem na Vás tento ročník čeká mnoho interpretů, na které se můžete těšit. Kupujte lístky v předprodeji, dokud jsou dostupné za lepší cenu.' %}

{% set crossroads = [
    {
        img: "bands/1-harlej.webp",
        alt: "Harlej",
        link: "/kapely/harlej",
    },
    {
        img: "bands/8-rytmus.webp",
        alt: "Rytmus",
        link: "/kapely/rytmus",
    },
    {
        img: "bands/2-nickhillson.webp",
        alt: "Nick Hillson",
        link: "/kapely/nickhillson",
    },
    {
        img: "bands/3-astroboy.webp",
        alt: "Astroboy",
        link: "/kapely/ajbrix&astroboy",
    },
    {
        img: "bands/4-imodium.webp",
        alt: "Imodium",
        link: "/kapely/imodium",
    },
    {
        img: "bands/5-375mnm.webp",
        alt: "375 metrů nad mořem",
        link: "/kapely/375mnm",
    },
    {
        img: "bands/6-impolite.webp",
        alt: "Impolite",
        link: "/kapely/impolite",
    },
    {
        img: "bands/7-karolakvido.webp",
        alt: "Karol a Kvído",
        link: "/kapely/karolakvido",
    }
]%}

{% block content %}

<main role="main" id="main" class="main">
    <section class="section">
        <div class="container">
            {% include "@components/box/breadcrumbs/breadcrumbs.twig" with { props: {
                items: [
                    {
                        link: "kapely",
                    }
                ]
            }} %}
        </div>
    </section>
    <section class="section section--top section--bottom">
        <div class="container">
            {% include "@components/core/title/title.twig" with { props: {
                title: "Kapely",
                tag: "h2",
            }} %}
            <div class="grid grid--center">
            	{% for item in crossroads %}
                <div class="grid__col col-6-12@sm">
                    {% include "@components/box/crossroad/crossroad.twig" %}
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>

{% endblock %}
