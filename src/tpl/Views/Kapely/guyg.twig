{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Dozvuky léta - Guy G' %}
{% set description = 'Dalším a to největším interpretem Dozvuků léta je Guy G. Guy G je rapující DJ, který se na scéně pohybuje od přelomu století. Tři sólový alba. Producent kombinující blues, jazz, country a Hip Hop a je to Třebovák' %}

{% block content %}

<main role="main" id="main" class="main">
    <section class="section">
        <div class="container">
            {% include "@components/box/breadcrumbs/breadcrumbs.twig" with { props: {
                items: [
                    {
                        link: "kapely",
                        url: "/kapely",
                    },
                    {
                        link: "Guy G",
                    }
                ]
            }} %}
        </div>
    </section>
    <section class="section">
        <div class="container">
            {% include "@components/box/main-image/main-image.twig" with { props: {
                img: "bands/13-guyg.webp",
                alt: "Guy G",
                title: "Guy G",
            }} %}
        </div>
    </section>
    <section class="section section--top">
        <div class="container">
            {% include "@components/core/title/title.twig" with { props: {
                title: "Guy G",
                tag: "h2",
            }} %}
        </div>
    </section>
    <section class="section section--bottom">
        <div class="container">
            <div class="blog">
                <div class="blog__text">
                    <h4>Úvod o kapele</h4>
                    <p>Guy G je rapující DJ, který se na scéně pohybuje od přelomu století. Tři sólový alba. Producent kombinující blues, jazz, country a Hip Hop a je to Třebovák</p>
                </div>
                <div class="blog__social">
                    <span>Sociální sítě:</span>
                    <a target="_blank" href="https://www.instagram.com/dj.guy_g/" class="blog__social-item">{% include "@components/core/icon-svg/icon-svg.twig" with {props: { name: "instagram" }} %}</a>
                </div>
            </div>
        </div>
    </section>
</main>

{% endblock %}
