{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Dozvuky léta - Galerie' %}
{% set description = 'V galerii stránky dozvuků léta naleznete fotografie z předešlých ročníků festivalu.' %}

{% set crossroads = [
    {
        img: "crossroad-gallery/galerie1.webp",
        alt: "fotografie z festivalu, ročníku 2021",
        title: "Ročník 2021",
        link: "/gallery/galerie-2021.html",
    },
    {
        img: "crossroad-gallery/galerie2.webp",
        alt: "fotografie z festivalu, ročníku 2022",
        title: "Ročník 2022",
        link: "/gallery/galerie-2022.html",
    },
]%}

{% block content %}

<main role="main" id="main" class="main">
    <section class="section">
        <div class="container">
            {% include "@components/box/breadcrumbs/breadcrumbs.twig" with { props: {
                items: [
                    {
                        link: "galerie",
                    }
                ]
            }} %}
        </div>
    </section>
    <section class="section section--top section--bottom">
        <div class="container">
            {% include "@components/core/title/title.twig" with { props: {
                title: "Galerie",
                tag: "h2",
            }} %}
            <div class="grid grid--center">
            	{% for item in crossroads %}
                <div class="grid__col col-6-12@sm">
                    {% include "@components/box/crossroad/crossroad.twig" %}
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>

{% endblock %}
