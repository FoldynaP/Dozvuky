<!DOCTYPE html>
<html lang="cs" class="no-js">
	<head>
		<meta charset="utf-8">
		<!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
		<meta name="description" content="{{ description }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

		<meta name="twitter:card" content="summary">
		<meta name="twitter:title" content="{{ pageTitle }}">
		<meta name="twitter:description" content="">
		<meta name="twitter:image" content="http://www.example.com/image.jpg">

		<meta property="og:title" content="{{ pageTitle }}">
		<meta property="og:description" content="">
		<meta property="og:image" content="http://www.example.com/image.jpg">
		<meta property="og:site_name" content="Project">
		<meta property="og:url" content="http://www.example.com/">

		<title>{{ pageTitle }}</title>

		<link rel="stylesheet" href="{{ assets.styles }}styles.css" media="screen,handheld">
		<link rel="stylesheet" href="{{ assets.styles }}print.css" media="print">
		<link rel="prerender" href="/">

		{% set fonts = [
			assets.fonts ~ 'gillsansmt.woff2'
		] %}
		{# assets.fonts ~ '', #}

		{% for font in fonts %}
			<link rel="preload" as="font" type="font/woff2" href="{{font}}" crossorigin>
		{% endfor %}

		{% set scripts = [
			assets.scripts ~ 'app.js',
		] %}
		{# assets.scripts ~ 'jquery.min.js', #}
		{# 'https://cdn.polyfill.io/v3/polyfill.min.js?features=default,Array.prototype.includes,Object.values,Array.prototype.find,AbortController,fetch', #}

		{# {% for script in scripts %}
		<link rel="preload" as="script" href="{{script}}">
		{% endfor %} #}

		<link rel="apple-touch-icon" sizes="180x180" href="{{ assets.images }}favicon/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="{{ assets.images }}favicon/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="{{ assets.images }}favicon/favicon-16x16.png">
		<link rel="manifest" href="{{ assets.images }}favicon/site.webmanifest">
		<link rel="mask-icon" href="{{ assets.images }}favicon/safari-pinned-tab.svg" color="#003cdb">
		<link rel="shortcut icon" href="{{ assets.images }}favicon/favicon.ico">
		<meta name="msapplication-TileColor" content="#ffffff">
		<meta name="msapplication-config" content="{{ assets.images }}favicon/browserconfig.xml">
		<meta name="theme-color" content="#ffffff">

<!-- 		<link rel="shortcut icon" href="{{ assets.images }}favicon.ico"> -->

		<script>
			(function () {
				var className = document.documentElement.className;
				className = className.replace('no-js', 'js');

				(function() {
					var mediaHover = window.matchMedia('(hover: none), (pointer: coarse), (pointer: none)');
					mediaHover.addListener(function(media) {
						document.documentElement.classList[media.matches ? 'add' : 'remove']('no-hoverevents');
						document.documentElement.classList[!media.matches ? 'add' : 'remove']('hoverevents');
					});
					className += (mediaHover.matches ? ' no-hoverevents' : ' hoverevents');
				})();

				// fix iOS zoom issue: https://docs.google.com/document/d/1KclJmXyuuErcvit-kwCC6K2J7dClRef43oyGVCqWxFE/edit#heading=h.sgbqg5nzhvu9
				var ua = navigator.userAgent.toLowerCase();
				var isIOS = /ipad|iphone|ipod/.test(ua) && !window.MSStream;

				if (isIOS === true) {
					var viewportTag = document.querySelector("meta[name=viewport]");
					viewportTag.setAttribute("content", "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no");
				}

				document.documentElement.className = className;
			}());
		</script>

	</head>
	<body>
		<div class="wrapper">
			{% include "@components/core/header/header.twig" with { props: {
				logo: "Logo-1.png",
				items: [
					{
						title: "Vstupenky",
						link: "/#tickets"
					},
					{
						title: "Kapely",
						link: "#"
					},
					{
						title: "Novinky",
						link: "#"
					},
					{
						title: "Galerie",
						link: "/galerie.html"
					},
					{
						title: "Informace",
						link: "#"
					},
					{
						title: "Kontakty",
						link: "#"
					}
				]
			}} %}

			{% block content %}{% endblock %}

			{% include "@components/core/footer/footer.twig" with { props: {
				logo: "Logo-1.png",
			}}%}
			{# <div class="modal js-modal u-hide">
				<button class="modal__close js-modal-close"></button>
				<div class="modal__body js-modal-body"></div>
			</div> #}
		</div>
		<script src="/js/runtime.js"></script>
		{% for script in scripts %}
			<script src="{{script}}"></script>
		{% endfor %}
		<script>
			App.run({})
			//VueApp.run({})
		</script>

	</body>
</html>
