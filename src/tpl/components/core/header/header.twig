<header class="header js-menu">
    <nav class="header__wrap">
        <div class="header__logo">
            <a href="/">
                {% include "@components/core/image/image.twig" with { item: {
                    img: props.logo
                }} %}
            </a>
        </div>
        <div class="header__list-wrap">
            <ul class="header__list js-menu-content">
                <a href="/" class="header__home">{% include "@components/core/icon-svg/icon-svg.twig" with {props: { name: "home" }} %}</a>
                {% for item in props.items %}
                <li class="header__item js-menu-link"><a href="{{ item.link }}" class="header__link">{{ item.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <button name="menu" type="button" class="header__toggle js-menu-btn" aria-label="Menu ">
			<span class="header__toggle-ico">
				<span></span><span></span><span></span>
			</span>
		</button>
    </nav>
</header>