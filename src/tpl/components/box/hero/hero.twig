{% set timeIntervalCss = props.timeInterval/1000 %}
<div class="hero js-hero" data-interval="{{ props.timeInterval }}">
    <div class="hero__slides">
        {% for item in props.images %}
        <div class="hero__img js-hero-slide {% if loop.first %}is-active{% endif %}">
            {% include "@components/core/image/image.twig" with { item: {
                img: item.img
            }} %}
        </div>
        {% endfor %}
    </div>
    <div class="hero__content">
        <h1 class="hero__title">Dozvuky Léta</h1>
        <h4 class="hero__annot">{{ props.annot }}</h4>
        {# <a href="#listky" class="btn-glitch" role="button"><span class="btn-glitch__text">Chci lístek {% include "@components/core/icon-svg/icon-svg.twig" with {props: { name: "ticket" }} %}</span></a> #}
        <a href="/galerie" class="btn-glitch" role="button"><span class="btn-glitch__text">Galerie</span></a>
    </div>
    <div class="hero__timeline" style="--slide-duration: {{timeIntervalCss}}s;">
    </div>
</div>